NODE_ENV=production
PORT=3000

# Database (Get from Neon PostgreSQL)
# Example: postgresql://user:password@host.neon.tech/dbname
DATABASE_URL=postgresql://user:password@host/dbname

# JWT Secret (Create a random secret string - min 32 chars)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-change-this-to-random-string

# Cloudinary (Get from https://cloudinary.com/console)
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Brevo Email Service (Get from https://app.brevo.com)
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@example.com
BREVO_SENDER_NAME=ICE Committee

# Frontend URL (Update this after Vercel deployment)
# Example: https://ice-committee-frontend-xxxx.vercel.app
FRONTEND_URL=https://ice-commite-registration.vercel.app